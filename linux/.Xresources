rofi.width:                          100
rofi.lines:                          10
rofi.columns:                        1
rofi.font:                           sans 11
rofi.bw:                             0
rofi.location:                       1
rofi.padding:                        5
! "Always show number of lines" Set from: Default
! rofi.fixed-num-lines:                true
! "Whether to load and show icons" Set from: Default
! rofi.show-icons:                     false
! "Window fields to match in window mode" Set from: Default
! rofi.window-match-fields:            all
rofi.line-margin:                    0
rofi.line-padding:                   1
rofi.separator-style:                none
rofi.hide-scrollbar:                 true
rofi.color-normal:                   #222222, #ffffff, #222222, #44475a, #ffffff
rofi.color-urgent:                   #222222, #f0719b, #222222, #77003d, #ffffff
rofi.color-active:                   #222222, #57c7ff, #222222, #007763, #ffffff
rofi.color-window:                   #222222, #ffffff, #222222
rofi.combi-hide-mode-prefix:         true
rofi.kb-remove-char-back:            BackSpace
rofi.kb-remove-to-eol:               Control+Shift+e
rofi.kb-accept-entry:                Control+m,Return,KP_Enter
rofi.kb-mode-next:                   Shift+Right,Control+Tab,Control+l
rofi.kb-mode-previous:               Shift+Left,Control+Shift+Tab,Control+h
rofi.kb-row-up:                      Up,Control+k,Shift+Tab,Shift+ISO_Left_Tab
rofi.kb-row-down:                    Down,Control+j
rofi.kb-cancel:                      Escape,Ctrl+c
