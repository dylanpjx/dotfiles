startup_message off
set wingravity c
set transgravity c
set border 3
set barborder 3
set barpadding 1 1
set bargravity c
set banish

# Use a dummy prefix key
escape Super_L

definekey top M-exclam exec ratpoison -c "setenv fs1 `ratpoison -c 'fdump'`"
definekey top M-1 exec ratpoison -c "frestore `ratpoison -c 'getenv fs1'`"
definekey top M-at exec ratpoison -c "setenv fs2 `ratpoison -c 'fdump'`"
definekey top M-2 exec ratpoison -c "frestore `ratpoison -c 'getenv fs2'`"
definekey top M-numbersign exec ratpoison -c "setenv fs3 `ratpoison -c 'fdump'`"
definekey top M-3 exec ratpoison -c "frestore `ratpoison -c 'getenv fs3'`"

definekey top M-return exec alacritty
definekey top M-b exec firefox
definekey top M-e exec vifmrun
definekey top M-d select
definekey top M-D exec
definekey top M-semicolon colon

definekey top M-k focusup
definekey top M-j focusdown
definekey top M-h focusleft
definekey top M-l focusright
definekey top M-K exchangeup
definekey top M-J exchangedown
definekey top M-H exchangeleft
definekey top M-L exchangeright

definekey top M-s vsplit
definekey top M-v hsplit
definekey top M-r resize
definekey top M-c remove
definekey top M-o only
definekey top M-q delete

definekey top M-n next
definekey top M-p prev
